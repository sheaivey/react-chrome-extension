{
    "manifest_version": 2,
    "minimum_chrome_version": "38",
    "version": "1.0.0",
    "author": "Shea Ivey",
    "name": "React Chrome Extension",
    "short_name": "react-chrome-extension",
    "description": "Crossplatform react chrome extension boilerplate.",
    "offline_enabled": true,
    "app": {
        "background": {
            "scripts": ["src/main.js"],
            "persistent": false
        }
    },

    "permissions": [
        "https://*.github.com/",
        "serial",
        "usb",
        "storage",
        "fileSystem",
        "fileSystem.write",
        "fileSystem.retainEntries",
        "notifications",
        "alwaysOnTopWindows",
        {"usbDevices": [
            {"vendorId": 1155, "productId": 57105}
        ]}
    ],
    "icons": {
        "128": "/public/img/icon.png"
    }
}
